<% flat = data.flats[owner_name] %>

<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,0,0,0.7) 0%, rgba(0,0,0,0.6) 50%), url('<%= image_path flat.picture %>');height: 50vh; background-position: center;">
</div>

<div id="header-flat">
  <div class="cantainer">
    <div class= "row">
      <div class="col-xs-12 col-sm-6 col-sm--offset-1">

        <div class="card-profile">
          <div class="card-profile-picture text-center">
          <%= image_tag flat.owner_picture, class: "img-circle" %>
          <p><%= flat.owner_name%></p>
          </div>
        </div>
        <div class="card-profile-details">
          <h1> <%= flat.name %> </h1>
          <p><%= flat.city %></p>
          <% flat.rating.times do %>
          <i class= "fa fa-star" style="color:#FFB500;"></i>
          <% end %>
          <% (5 - flat.rating).times do %>
          <% end %>
          <i class= "fa fa-star" style="color:#CACCCD;"></i>
        </div>
      </div>
      <div class="col-xs-12 col-sm-4">
        <form action="" >
          <h2>Book thid flat</h2>
          <div class="form-group">
            <div class="row">
              <div class= "col-xs-6">
                <input type="text" placeholder="checkin" class="form-control">
              </div>
              <div class= "col-xs-6">
                <input type="text" placeholder="checkout" class="form-control">
              </div>
            </div>
          </div>
          <div class="form-group">
            <select name="" id="" class="form-control">
              <option value="1">1 guest</option>
              <option value="2">2 guests</option>
              <option value="3">3 guests</option>
            </select>
          </div>
          <input type="submit" value="Booki it", class="btn btn-danger", style="width: 100%;">
        </form>
      </div>
    </div>
  </div>
</div>
